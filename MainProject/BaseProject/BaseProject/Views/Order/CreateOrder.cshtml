@{
}
<script>
  document.getElementById('RegisterDate').value = new Date().toISOString().substring(0, 10);
  document.getElementById('EndDate').value = new Date().toISOString().substring(0, 10);
</script>
<form asp-controller="Order" asp-action="create" method="post">
    <input type="text" name="Customer" placeholder="주문자"/>
    <input type="hidden" name="Status"  value="true" />
    <input type="datetime-local" id="RegisterDate" name="RegisterDate">
    <input type="datetime-local" id="EndDate" name="EndDate">
    @foreach(Product_Model product in Model)
    {
        <input type="hidden" name="ProductId"  value="@product.Id" />
        <input type="text" name="Name" value="@product.Name" />
        <input type="text" name="Quantity" value="0" />
        <img src="@product.ImgUrl"/>
    })
    <button>상품등록</button>
</form>

