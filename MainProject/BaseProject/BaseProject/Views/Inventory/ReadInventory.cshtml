@{
}

@foreach(Inventory_Model inventory in Model)
{
<form asp-controller="Inventory" asp-action="update" method="post">
    <input type="hidden" name="Id"  value="@inventory.Id" />
    <input type="text" name="Name"  value="@inventory.Product.Name" />
    <input type="text" name="Count"  value="@inventory.Count" />
    <input type="text" name="Time" value="@inventory.CreateTime">
    <input type="date" name="CreateTime" value="@inventory.CreateTime">
    <img src="@inventory.Product.ImgUrl">
</form>
}
